@{
    Layout = null;
}
@model CreativeCollab2.Models.VmSignUp
<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <title>Creative collab</title>
    <link rel="icon" href="~/images/network.png" type="image/png" sizes="30x30">

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.css">

    <!-- STYLE CSS -->


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/color.css">
    <link rel="stylesheet" href="~/css/responsive.css">


</head>

<body>
<div class="wrapper">
    <form class="wizzard2" method="post" asp-controller="User" asp-action="SignUp">
       <h2></h2>
        <section>

            <div class="inner ">
                <div class="land-featurearea">
                    <div class="land-meta">
                        <h1>CREATIVE COLLAB</h1>

                        <div class="friend-logo">
                            <span><img src="~/images/cc.png" alt=""></span>
                        </div>

                    </div>
                </div>

                <div class="form-content">
                    <div class="form-header">
                        <h3>Registration</h3>
                    </div>
                    <div class="form-row">
                        <div class="form-holder">
                            <input asp-for="FirstName" type="text" placeholder="First Name" class="form-controll">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-holder">
                            <input asp-for="LastName" type="text" placeholder="Last Name" class="form-controll">
                            <span asp-validation-for="LastName" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-holder">
                            <input asp-for="Email" type="email" placeholder="Email" class="form-controll">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-holder">
                            <input asp-for="BirthDate" type="date" class="form-controll">
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-holder">
                            <input asp-for="Password" type="Password" placeholder="Password" class="form-controll">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-holder" style="align-self: flex-end; transform: translateY(4px);">
                            <div class="checkbox-tick">
                                <label class="male">
                                    <input type="radio" asp-for="Gender" name="gender" value="M" checked> Male<br>
                                    <span class="checkmark"></span>
                                </label>
                                <label class="female">
                                    <input type="radio" asp-for="Gender" name="gender" value="F"> Female<br>
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>

                    </div>
                    <a href="/User/Login" title="" class="already-have">Already have an account !</a>
                    <div class="submit-btns" style="margin-left: 500px; ">
                        <button class="mtr-btn signin" type="submit" style="height: 40px; width: 150px;margin-left: 90px;"><span>Create Account</span></button>
                    </div>
                </div>
            </div>

        </section>

    </form>
</div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


    <!-- JQUERY STEP -->
    <script data-cfasync="false" src="../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>


    <script src="~/js/script.js"></script>
    <script src="~/js/jquery.steps.js"></script>
    <script src="~/js/main.js"></script>




</body>

</html>