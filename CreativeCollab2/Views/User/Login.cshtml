@{
	Layout = null;
}
@model CreativeCollab2.Models.VmLogIn
<!DOCTYPE html>
<html lang="en">

<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="" />
	<meta name="keywords" content="" />
	<title>Creative collab</title>
	<link rel="icon" href="~/images/network.png" type="image/png" sizes="30x30">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
		  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

	<link rel="stylesheet" href="~/css/style.css">
	<link rel="stylesheet" href="~/css/color.css">
	<link rel="stylesheet" href="~/css/responsive.css">

</head>

<body>
<div class="wrapper">
	<form class="wizzard2" method="post" asp-controller="User" asp-action="Login">
		<!-- SECTION 0 -->
		<!-- SECTION 1 -->
		<h2></h2>
		<section>

			<div class="inner ">
				<div class="land-featurearea">
					<div class="land-meta">
						<h1>CREATIVE COLLAB</h1>

						<div class="friend-logo">
							<span><img src="~/images/cc.png" alt=""></span>
						</div>

					</div>
				</div>

				<div class="form-content">
					<div class="form-header">
						<h3>LOGIN</h3>
					</div>
					<span class="text-danger">@ViewBag.ValidationMessage</span>
					<div class="form-row">
						<div class="form-holder">
							<input asp-for="Email" type="text" placeholder="Username" class="form-controll">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>

					</div>
					<div class="form-row">
						<div class="form-holder">
							<input asp-for="Password" type="password" placeholder="Password" class="form-controll">
							<span asp-validation-for="Password"  class="text-danger"></span>
						</div>

					</div>
					<div class="form-row">

						<div class="form-holder" style="align-self: flex-end; transform: translateY(4px);">
							<div class="checkbox">
								<label>
									<input asp-for="RememberMe" type="checkbox" checked="checked" /><i class="check-box"></i> Always
									Remember Me.
								</label>
								<a href="Register.html" title="" class="forgot-pwd">Forgot Password?</a>
							</div>
							<br />
							<a href="/User/SignUp" class="already-have">
								Don't have an account?
							</a>
							<div class="submit-btns" style="margin-left: 500px; ">
								<button class="mtr-btn signin" type="submit"
										style="height: 40px; width: 90px;">
									<span>Login</span>
								</button>
							</div>

						</div>


					</div>
				</div>
			</div>
		</section>

	</form>
</div>
	<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


	<!-- JQUERY STEP -->
	<script data-cfasync="false" src="../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>


	<script src="~/js/script.js"></script>
	<script src="~/js/jquery.steps.js"></script>
	<script src="~/js/main.js"></script>


</body>

</html>